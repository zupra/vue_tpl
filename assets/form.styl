//========== helperS/molecules ===============
[disabled]
  background #EEE
  color #999
  cursor wait !important
  opacity .5



.form-group
  display flex
  flex-direction column
  //!FIXME
  >*
    width 240px
    margin-bottom 1em
    

.checked-group
  label
    display block

 // !TODO
.form-line
  margin -.3em
  &+&
    margin-top .7em
  .btn, button, input, select
    margin .35em
  label
    white-space: nowrap
    padding-right .7em



//========== BASE form_EL ===============

//helper-el
fieldset
  border 1px solid #EEE
  padding 1em 1.4em 1.4em
  margin 1em 0
legend
  padding 0 .3em
label
  user-select none
  cursor pointer
  white-space nowrap
  display inline-table

//FF fix
button::-moz-focus-inner
  border: 0
select:not([multiple]):-moz-focusring
  color: transparent;
  text-shadow: 0 0 0 #000;


input[type=color]
  height: 3em;
  vertical-align: middle;
  background: transparent;
  border: 0;









//BASE_el
button, select, textarea, 
input:not([type=range])//:not([type=color])
  appearance: none
  outline: 0

  box-shadow: 0 4px 6px rgba(50,50,93,.11), 0 1px 3px rgba(0,0,0,.08);
  font: inherit

$base_form_el_size()
  line-height 1.2
  padding .6em 1em
.select, select:not([multiple]), 
textarea, 
.btn, button, 
input:not([type=color]):not([type=range]):not([type=radio]):not([type=checkbox])
  $base_form_el_size()
  border-radius .3em


// Input_el
.select, select, textarea, 
input:not([type=color]):not([type=range]):not([type=radio]):not([type=checkbox])
  border: 1px solid $border-input
  &:focus:not([type=reset]):not([type=submit])
    border-radius: 0
    border-top-color: $link 


$select()
  //border-radius .3em
  cursor: pointer
  background #fff url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='22' height='12'><polygon points='0,0 12,0 6,12' fill='orange'/></svg>") 100% no-repeat;
  padding-right 2em //for icon

// select:not([multiple])
//   appearance: none
select:not([multiple]), .select
  $select()
select[multiple]
  cursor: pointer
  padding .2em
  option
    padding .2em
    padding-left .8em
    &:first-child
      background #EFEFEF


.Serch
  padding-left 2.4em  
  background url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='13' height='13'><g stroke-width='2' stroke='blueviolet'><circle cx='5' cy='5'  r='4' style='fill:none;' /><line x1='9' y1='9' x2='13' y2='13' /></g></svg>") 1em 50% no-repeat




