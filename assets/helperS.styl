.Wrap
  padding: 1em;
  margin: auto;
  max-width: 1200px;

.Tag
  font-family: monospace;
  //font-weight normal
  background: aliceblue;
  padding: .3em;
  margin: 1em 0;
  &:before
    content '[ '
  &:after
    content ' ] '
  &:before
  &:after
    color blue

hr
  margin 1em 0
  height: 1px
  border: none
  border-top: 1px dashed $orange //violet
  &.H1
    margin 5em 3em 4em
    text-align: center
    overflow: visible
    border 0
    background-image: linear-gradient(to right, rgba(#000, 0), rgba(violet 0.75), rgba(#000, 0));
    &:after
      content: "ยง";
      display: inline-block;
      position: relative;
      top: -0.7em;
      font-size: 1.5em;
      padding: 0 0.25em;
      background: white;
